# Puppet Name: <%= @title %>
#
<%
splunkhome = scope['::splunk::splunkhome']
-%>
[default]
host = <%= scope['::hostname'] %>

[monitor:/<%= splunkhome %>/var/log/splunk]
index = _internal
_TCP_ROUTING = *
_whitelist = /(audit|license_audit|metrics|mongod|python|splunkd|splunkd_stderr|splunkd_stdout|splunklogger)\.log$

[monitor:/<%= splunkhome %>/var/log/introspection]
index = _internal
_TCP_ROUTING = *
_whitelist = /(kvstore)\.log$

[filter:blacklist:splunkvar]
regex1 = ^<%= splunkhome %>/var

[fschange:<%= splunkhome %>]
index = _audit
disabled = false
pollPeriod = 60
recurse = true
followLinks = false
hashMaxSize = -1
fullEvent = false
sendEventMaxSize = -1
filesPerDelay = 10
delayInMills = 100
signedaudit = false
filters = splunkvar
